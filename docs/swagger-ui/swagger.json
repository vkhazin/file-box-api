{
  "swagger": "2.0",
  "info": {
    "version": "0.1.0",
    "title": "FileBoxGateway"
  },
  "host": "nic9r7i7z6.execute-api.us-west-2.amazonaws.com",
  "basePath": "/test/smith-file-box",
  "schemes": [
    "https"
  ],
  "paths": {
    "/$search": {
      "get": {
        "summary": "Returns a list of files based on the specified search criteria",
        "produces": [
          "*/*"
        ],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "The folder path to search"
          },
          {
            "name": "from",
            "in": "query",
            "required": true,
            "type": "integer",
            "description": "The starting index of the file list"
          },
          {
            "name": "size",
            "in": "query",
            "required": true,
            "type": "integer",
            "description": "The maximum number of files to return"
          }
        ],
        "responses": {
          "200": {
            "description": "List of files",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/FileMetaData"
              }
            }
          },
          "401": {
            "$ref": "#/responses/Unauthorized"
          }
        }
      }
    },
    "/{path}": {
      "get": {
        "summary": "Downloads a file",
        "produces": [
          "*/*"
        ],
        "parameters": [
          {
            "name": "path",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The file path"
          }
        ],
        "responses": {
          "200": {
            "description": "A single file",
            "schema": {
              "type": "file"
            }
          },
          "401": {
            "$ref": "#/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/responses/NotFound"
          }
        }
      },
      "delete": {
        "summary": "Deletes a file",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "path",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The file path"
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "401": {
            "$ref": "#/responses/Unauthorized"
          }
        }
      },
      "post": {
        "summary": "Uploads a file",
        "consumes": [
          "*/*"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "path",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The file path"
          }
        ],
        "responses": {
          "200": {
            "description": "File metadata",
            "schema": {
              "$ref": "#/definitions/FileMetaData"
            }
          },
          "401": {
            "$ref": "#/responses/Unauthorized"
          }
        }
      }
    }
  },
  "responses": {
    "NotFound": {
      "description": "The specified resource was not found",
      "schema": {
        "$ref": "#/definitions/Error"
      }
    },
    "Unauthorized": {
      "description": "Unauthorized",
      "schema": {
        "$ref": "#/definitions/Error"
      }
    }
  },
  "definitions": {
    "Empty": {
      "type": "object",
      "title": "Empty schema"
    },
    "FileMetaData": {
      "type": "object",
      "title": "Metadata for a single file",
      "properties": {
        "metadata": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "path": {
          "type": "string"
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      },
      "required": [
        "code",
        "message"
      ]
    }
  }
}